<!DOCTYPE html>
<html>
    <head>
        <title>
            Match!
        </title>
    </head>
    <body>
        <div id="grid">
            <!--This will be the main grid element that will contain everything-->
            <div id="timer">0:00</div>
            <div id="player">
                <a id="player_won" style="display: none;">WON!</a>
                <a id="player_lost" style="display: none;">LOST!</a>
                <a id="player_name"><%= username %></a>
                <a id="player_pieces">0 pieces placed</a>
            </div>
            <div id="opponent">
                <a id="opponent_won" style="display: none;">WON!</a>
                <a id="opponent_lost" style="display: none;">LOST!</a>
                <a id="opponent_name">Wating or Opponent...</a>
                <a id="opponent_pieces">0 pieces placed</a>
            </div>
            <button id="home" style="display: none;">Go Home!</button>

            <svg id="template" style="display: none; pointer-events:none;fill: #e0e0e0; stroke: #000000; stroke-width: 2px;"
                viewBox="-1 -3 61 73.28" height="77.28px" width="63px">
                <polygon points="30 0 60 17.32 60 51.96 30 69.28 0 51.96 0 17.32"/>
            </svg>
            
            
            <script src="javascripts/game.js"></script>
        </div>
        <script>
            let clock = document.getElementById("timer");
            let secs = 0;
            let mins = 0;

            function updateTime(){
                secs++;
                if (secs == 60){
                    mins++;
                    secs=0;
                }
                clock.innerHTML = `${mins}:${secs.toString().padStart(2,"0")}`;
            }

            let timer = setInterval(updateTime, 1000)
        </script>

        <link rel="stylesheet" href="stylesheets/game.css">
    </body>
</html>